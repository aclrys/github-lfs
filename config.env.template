# config.env.template
# Copy this file to config.env and update with your values

# GitHub Authentication
GITHUB_TOKEN="enter_github_token"      # From github.com/settings/tokens
GITHUB_USERNAME="enter_github_username"   # Your GitHub username
GITHUB_EMAIL="user@example.com"      # Your GitHub email

# LFS Server Settings
LFS_BASE_DIR="/root/github-lfs"
LFS_SIZE_LIMIT="5MB"
LFS_SERVER_NAME=""   # Your server IP or domain

# Monitoring
ALERT_EMAIL=""
STORAGE_THRESHOLD="80"
